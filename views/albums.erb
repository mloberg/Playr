<div class="page-header">
	<h1>Albums</h1>
</div>
<div class="row">
	<div class="span15 offset1">
		<ul class="media-grid album-grid">
			<% @albums.each do |album| %>
			<li><a class="thumbnail" href="/album/<%= album.album %>/<%= album.artist %>"><img src="<%= album_artwork album.album, album.artist %>" alt="<%= album.album %>" /><%= album.album %> by <%= album.artist %></a></li>
			<% end %>
		</ul>
	</div>
</div>