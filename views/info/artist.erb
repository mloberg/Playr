<div class="page-header">
	<h1><%= @artist["name"] %></h1>
</div>
<div class="row">
	<div class="span9">
		<img src="<%= @image %>" alt="<%= @artist["name"] %>" />
	</div>
	<div class="span7">
		<p><%= @artist["bio"]["summary"].gsub("\n", "<br />") %><br /><small>Published on <%= Time.parse(@artist["bio"]["published"]).strftime("%b %d, %Y") %> to <a href="http://last.fm">Last.fm</a></small></p>
		<h4>Tags <small>from <a href="http://last.fm">Last.fm</a></small></h4>
		<ul>
		<% @artist["tags"]["tag"].each do |tag| %>
			<li><%= tag["name"] %></li>
		<% end %>
		</ul>
	</div>
</div>
<div class="row">
	<div class="span8">
		<h2>Uploaded Albums</h2>
		<% if @albums.empty? %>
		<p>There are no uploaded albums by this artist.</p>
		<% else %>
			<ul class="media-grid">
			<% @albums.each do |album| %>
				<li>
					<a><img class="thumbnail" src="<%= album_artwork album, @artist["name"] %>" alt="<%= album %>" /></a>
				</li>
			<% end %>
			</ul>
		<% end %>
	</div>
	<div class="span8">
		<h2>Similar Artists</h2>
		<ul class="media-grid">
		<% puts 'test' %>
		<% @artist["similar"]["artist"].each do |artist| %>
			<li>
				<% artist["image"].each {|i| artist["img"] = i["#text"] if i["size"] == "large"} %>
				<a href="/artist/<%= artist["name"] %>"><img class="thumbnail" src="<%= artist["img"] %>" alt="<%= artist["name"] %>" /></a>
			</li>
		<% end %>
		</ul>
	</div>
</div>
<%= @artist %>