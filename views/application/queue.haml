.row
	- if @playing
		%div{ :class => "span16 now-playing" }
			%h2 Now Playing
			.row
				%div{ :class => "span4 offset4" }
					%img{ :src => "#{artwork(@song.album, @song.artist)}", :alt => "#{@song.title}" }
				.span8
					%h3
						= @song.title
						%small
							by
							%a{ :href => "/artist/#{uri_encode(@song.artist)}" }= @song.artist
					%p
						%strong Album:
						%a{ :href => "/album/#{uri_encode(@song.album)}/#{uri_encode(@song.artist)}" }= @song.album
						%br
						%strong Year:
						= @song.year
						%br
						%strong Genre:
						= @song.genre
						%br
						%strong Plays:
						= @song.plays
						%br
						%strong Likes:
						= Vote.song(@song).size
					%p
						- if Vote.likes(@song.id, @user.id)
							%a{ :class => "like btn success disabled", :'data-song' => "#{@song.id}" } Like
						- else
							%a{ :class => "like btn success", :'data-song' => "#{@song.id}" } Like
						- if Vote.likes(@song.id, @user.id) == false
							%a{ :class => "dislike btn danger disabled", :'data-song' => "#{@song.id}" } Dislike
						- else
							%a{ :class => "dislike btn danger", :'data-song' => "#{@song.id}" } Dislike
						%a{ :class => "btn play-next" } Next
	- elsif @paused
		%div{ :class => "span16 paused" }
			%h2 Playr is Stopped
			%p
				%a{ :class => "btn success start-queue", :href => "#" } Start Queue
.row
	- @queue.each do |q|
		%div{ :class => "span8 song-box", :id => "song-#{q.song.id}" }
			%h3
				= q.song.title
				%small
					by
					= q.song.artist
			.row
				.span4
					%img{ :src => "#{artwork(q.song.album, q.song.artist)}", :alt => "#{q.song.album}" }
				.span4
					%p
						%strong Song:
						%a{ :href => "/track/#{q.song.id}" }= q.song.title
						%br
						%strong Artist:
						%a{ :href => "/artist/#{uri_encode(q.song.artist)}" }= q.song.artist
						%br
						%strong Album:
						%a{ :href => "/album/#{uri_encode(q.song.album)}/#{uri_encode(q.song.artist)}" }= q.song.album
						%br
						%strong Plays:
						= q.song.plays
						%br
						%strong Likes:
						= Vote.song(q.song).size
					%p{ :class => "buttons" }
						- if Vote.likes(q.song.id, @user.id)
							%a{ :class => "like btn success disabled", :'data-song' => "#{q.song.id}" } Like
						- else
							%a{ :class => "like btn success", :'data-song' => "#{q.song.id}" } Like
						- if Vote.likes(q.song.id, @user.id) == false
							%a{ :class => "dislike btn danger disabled", :'data-song' => "#{q.song.id}" } Dislike
						- else
							%a{ :class => "dislike btn danger", :'data-song' => "#{q.song.id}" } Dislike
						%a{ :class => "btn skip", :'data-song' => "#{q.song.id}" } Don't Play